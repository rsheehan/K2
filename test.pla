include "inc/cmdsys.plh"
include "inc/conio.plh"
include "inc/fbtext.plh"

sysflags restxt1|resxtxt1

byte[] title = "K2 Presentation"
byte left
byte top = 0
byte titleHeight = 3
byte contentHeight = 23
byte bulletColour = ORANGE
byte bulletChar = '['

fbInit(MAGENTA, BLACK, TRUE, TRUE)

left = justifiedStart(CENTREJ, title, TRUE)

fbBox(left - 1, top, title, titleHeight)
top++
fbTitleArea(@title, left, top, titleHeight, WHITE, BLACK)
top = top + titleHeight
contentHeight = contentHeight - top - 1
fbBox(0, top, 38, contentHeight)
fbTrack(left, top, title)
top++
fbViewport(1, top, 38, contentHeight, LIGHT_BLUE, BLACK)

putln
fbPutf("The first point.\n")
putln
fbPutf("The *{ORANGE}second* point.\n")
putln
fbPutf("The _third_ point.\n")
putln
fbPutf("_The *{AQUAMARINE}fourth point*_.\n")
putln
fbPutf("__Nothing *{magenta}and* *{purple}then _something_.\n")
putln
fbPutf("*{WHITE}1234567890123456789012345678901234567890\n")
putln
fbPutf("\\A\\_B\\*C_\\\\D\n") // in text file won't need 2 \s
putln
conio:getKey()
fbOff

done