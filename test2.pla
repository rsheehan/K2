include "inc/cmdsys.plh"
include "inc/conio.plh"
include "inc/fbtext.plh"

sysflags restxt1|resxtxt1

byte[] title = "K2 Presentation"
byte left
byte top = 0
byte titleHeight = 1
byte contentHeight = 23

fbInit(YELLOW, BLACK, true)

left = fbJustifiedLeft(LEFTJ, title, FALSE)
fbTitleArea(@title, left, top, titleHeight, BLACK, GREY1)
top++
contentHeight = contentHeight - top - 1
fbBox(0, top, 38, contentHeight, WHITE, BLACK)
