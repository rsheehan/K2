include "inc/cmdsys.plh"
include "inc/conio.plh"
include "inc/fbtext.plh"

sysflags restxt1|resxtxt1

byte[] title = " K2 Limitations "
byte left
byte top = 0
byte titleHeight = 3
byte contentHeight = 23

fbInit(YELLOW, DARK_BLUE, TRUE)

left = fbJustifiedLeft(CENTREJ, title, TRUE)

fbBox(left - 1, top, title, titleHeight, MAGENTA, DARK_BLUE)
top++
fbTitleArea(@title, left, top, titleHeight, WHITE, BLACK)
top = top + titleHeight
contentHeight = contentHeight - top - 1
fbBox(0, top, 38, contentHeight, MAGENTA, DARK_BLUE)
fbTrack(left, top, title, MAGENTA, DARK_BLUE)
top++
fbViewport(1, top, 38, contentHeight, WHITE, BLACK)

putln
putf("+ If only one line between the title")
putf("  box and the content box...")
putln

putf("  + ...both box outline colours must")
putf("    be the same *{GREY2}(as here)")
putln
putf("+ Underlines are only allowed in the")
putf("  last line of _multi-line_ points")
putln
putf("+ Underlines are in the colour of")
putf("  the content foreground even if the")
putf("  underlined text is a _*{YELLOW}different_")
putf("  colour")

conio:getKey()
fbOff

done